            </FluentButton>
        </FluentStack>
    </FluentCard>

    <!-- Newsletter Signup -->
    <FluentCard Style="background: linear-gradient(135deg, #0078d4 0%, #106ebe 100%); color: white; padding: 2rem;">
        <FluentStack Orientation="Orientation.Vertical" VerticalGap="12">
            <h3 style="color: white;">Stay Updated</h3>
            <p style="color: white;">
                Subscribe to our newsletter to receive the latest NBT news, test dates, and announcements.
            </p>
            <FluentButton Appearance="Appearance.Lightweight" 
                          Style="background: white; color: #0078d4; width: fit-content;">
                Subscribe to Newsletter
            </FluentButton>
        </FluentStack>
    </FluentCard>
