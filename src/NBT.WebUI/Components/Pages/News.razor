@page "/news"
@rendermode InteractiveServer

<PageTitle>What's New - National Benchmark Tests</PageTitle>

<FluentStack Orientation="Orientation.Vertical" VerticalGap="24">
    <FluentBreadcrumb>
        <FluentBreadcrumbItem Href="/">Home</FluentBreadcrumbItem>
        <FluentBreadcrumbItem Href="/news">What's New</FluentBreadcrumbItem>
    </FluentBreadcrumb>

    <h1>News & Announcements</h1>

    <!-- Latest Announcement -->
    <FluentMessageBar Intent="MessageIntent.Info" Style="padding: 1.5rem;">
        <strong>Registration Now Open:</strong> 2024 NBT test dates are now available. 
        Register early to secure your preferred date and venue.
    </FluentMessageBar>

    <!-- Important Dates -->
