@page "/"
@rendermode InteractiveServer
@inject NavigationManager Navigation

<PageTitle>National Benchmark Tests (NBT)</PageTitle>

<div class="landing-page">
    <!-- Hero Section -->
    <section class="hero-section">
        <div class="hero-inner">
            <div class="hero-content">
                <img src="/images/nbt-logo.png" alt="NBT Logo" class="hero-logo" />
                <h1 class="hero-title">National Benchmark Tests</h1>
                <p class="hero-subtitle">Assessing academic readiness for tertiary education</p>
                <div class="hero-actions">
                    <button class="btn hero-btn-primary" @onclick="@GoToRegister">
                        <span class="icon person-add-icon"></span> Register for NBT
                    </button>
                    <button class="btn hero-btn-secondary" @onclick="@GoToLogin">
                        <span class="icon sign-in-icon"></span> Sign In
                    </button>
                </div>
            </div>
            <div class="hero-image">
                <img src="/images/hero-student.png" alt="Student taking NBT test" class="student-illustration" />
            </div>
        </div>
    </section>

    <!-- Navigation Cards -->
    <section class="audience-section page-container">
        <div class="audience-card">
            <div class="card-header">
                <span class="icon-large person-icon"></span>
                <h2>For Applicants</h2>
            </div>
            <ul class="link-list">
                <li><a href="/about/tests"><span class="icon book-icon"></span> About the Tests</a></li>
                <li><a href="/about/test-dates"><span class="icon calendar-icon"></span> Test Dates & Venues</a></li>
                <li><a href="/about/fees"><span class="icon money-icon"></span> Test Fees</a></li>
                <li><a href="/about/results"><span class="icon checkmark-icon"></span> Understanding Results</a></li>
                <li><a href="/faq"><span class="icon question-icon"></span> FAQs</a></li>
            </ul>
        </div>

        <div class="audience-card">
            <div class="card-header">
                <span class="icon-large building-icon"></span>
                <h2>For Institutions</h2>
            </div>
            <ul class="link-list">
                <li><a href="/institutions/about"><span class="icon info-icon"></span> Using NBT Results</a></li>
                <li><a href="/institutions/request-results"><span class="icon download-icon"></span> Request Results</a></li>
                <li><a href="/institutions/research"><span class="icon beaker-icon"></span> Research & Validation</a></li>
            </ul>
        </div>

        <div class="audience-card">
            <div class="card-header">
                <span class="icon-large graduation-icon"></span>
                <h2>For Educators</h2>
            </div>
            <ul class="link-list">
                <li><a href="/educators/preparing-students"><span class="icon book-open-icon"></span> Preparing Students</a></li>
                <li><a href="/educators/sample-questions"><span class="icon quiz-icon"></span> Sample Questions</a></li>
                <li><a href="/educators/resources"><span class="icon folder-icon"></span> Teaching Resources</a></li>
            </ul>
        </div>
    </section>

    <!-- Important Notices -->
    <section class="notices-section page-container">
        <div class="message-bar info">
            <strong>2025 Test Dates Now Available!</strong> Registration is open for the 2025 test cycle.
            Book your test early to secure your preferred venue and date.
        </div>
    </section>
</div>

@code {
    private void GoToRegister() => Navigation.NavigateTo("/register");
    private void GoToLogin() => Navigation.NavigateTo("/login");
}