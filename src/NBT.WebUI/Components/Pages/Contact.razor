@page "/contact"
@rendermode InteractiveServer

<PageTitle>Contact Us - National Benchmark Tests</PageTitle>

<FluentStack Orientation="Orientation.Vertical" VerticalGap="24">
    <FluentBreadcrumb>
        <FluentBreadcrumbItem Href="/">Home</FluentBreadcrumbItem>
        <FluentBreadcrumbItem Href="/contact">Contact Us</FluentBreadcrumbItem>
    </FluentBreadcrumb>

    <h1>Contact Us</h1>

    <FluentGrid>
        <FluentGridItem xs="12" md="6">
            <FluentCard>
                <FluentStack Orientation="Orientation.Vertical" VerticalGap="16">
                    <h2>Send Us a Message</h2>
                    <FluentTextField @bind-Value="@ContactForm.Name" Label="Name" Required="true" Style="width: 100%;" />
                    <FluentTextField @bind-Value="@ContactForm.Email" Label="Email" Required="true" Style="width: 100%;" />
                    <FluentTextField @bind-Value="@ContactForm.Phone" Label="Phone (Optional)" Style="width: 100%;" />
                    <FluentSelect Label="Inquiry Type" TOption="string" @bind-Value="@ContactForm.InquiryType" Style="width: 100%;">
                        <FluentOption TOption="string" Value="General">General Inquiry</FluentOption>
                        <FluentOption TOption="string" Value="Registration">Registration</FluentOption>
                        <FluentOption TOption="string" Value="Results">Results</FluentOption>
                        <FluentOption TOption="string" Value="Technical">Technical Support</FluentOption>
                    </FluentSelect>
                    <FluentTextField @bind-Value="@ContactForm.Subject" Label="Subject" Required="true" Style="width: 100%;" />
                    <FluentTextArea @bind-Value="@ContactForm.Message" Label="Message" Required="true" Rows="5" Style="width: 100%;" />
                    <FluentButton Appearance="Appearance.Accent" OnClick="@SubmitForm">
                        Send Message
                    </FluentButton>
                </FluentStack>
            </FluentCard>
        </FluentGridItem>

        <FluentGridItem xs="12" md="6">
            <FluentCard>
                <FluentStack Orientation="Orientation.Vertical" VerticalGap="16">
                    <h2>Contact Information</h2>
