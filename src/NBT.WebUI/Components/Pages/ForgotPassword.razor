@page "/forgot-password"
@rendermode InteractiveServer
@using System.ComponentModel.DataAnnotations
@inject NavigationManager Navigation

<PageTitle>Forgot Password - NBT Website</PageTitle>

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <h1>Forgot Password</h1>
            <p>Enter your email to reset your password</p>
        </div>

        @if (!string.IsNullOrEmpty(_errorMessage))
        {
            <FluentMessageBar Intent="MessageIntent.Error" Class="login-error">
                @_errorMessage
            </FluentMessageBar>
        }

        @if (_success)
        {
            <FluentMessageBar Intent="MessageIntent.Success">
                Password reset instructions have been sent to your email.
            </FluentMessageBar>
        }

        <EditForm Model="@_forgotPasswordModel" OnValidSubmit="@HandleForgotPasswordAsync" FormName="ForgotPasswordForm">
            <DataAnnotationsValidator />
            
            <div class="form-group">
                <FluentTextField 
                    @bind-Value="_forgotPasswordModel.Email"
                    Label="Email Address"
                    Placeholder="your.email@example.com"
                    Required="true"
                    Style="width: 100%;" />
                <ValidationMessage For="@(() => _forgotPasswordModel.Email)" />
            </div>

            <div class="form-actions">
                <FluentButton 
                    Type="ButtonType.Submit"
                    Appearance="Appearance.Accent"
                    Loading="@_isLoading"
                    Disabled="@_isLoading"
                    Style="width: 100%;">
                    @(_isLoading ? "Sending..." : "Send Reset Link")
                </FluentButton>
            </div>
        </EditForm>

        <div class="login-footer">
            <FluentAnchor Href="/login">Back to Login</FluentAnchor>
        </div>
    </div>
</div>

@code {
    [SupplyParameterFromForm]
    private ForgotPasswordModel _forgotPasswordModel { get; set; } = new();
    
    private bool _isLoading = false;
    private string? _errorMessage;
    private bool _success = false;

    private async Task HandleForgotPasswordAsync()
    {
        _isLoading = true;
        _errorMessage = null;
        _success = false;

        try
        {
            // TODO: Implement forgot password with API
            await Task.Delay(1000); // Simulate API call
            
            _success = true;
            await Task.Delay(3000);
            Navigation.NavigateTo("/login");
        }
        catch (Exception ex)
        {
            _errorMessage = $"An error occurred: {ex.Message}";
        }
        finally
        {
            _isLoading = false;
        }
    }

    public class ForgotPasswordModel
    {
        [Required(ErrorMessage = "Email is required")]
        [EmailAddress(ErrorMessage = "Invalid email address")]
        public string Email { get; set; } = string.Empty;
    }
}
