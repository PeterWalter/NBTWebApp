@page "/register"
@rendermode InteractiveServer
@using System.ComponentModel.DataAnnotations
@inject NavigationManager Navigation

<PageTitle>Register - NBT Website</PageTitle>

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <h1>Create Account</h1>
            <p>Register for an NBT account</p>
        </div>

        @if (!string.IsNullOrEmpty(_errorMessage))
        {
            <FluentMessageBar Intent="MessageIntent.Error" Class="login-error">
                @_errorMessage
            </FluentMessageBar>
        }

        @if (_success)
        {
            <FluentMessageBar Intent="MessageIntent.Success">
                Registration successful! Please check your email for verification instructions.
            </FluentMessageBar>
        }

        <EditForm Model="@_registerModel" OnValidSubmit="@HandleRegisterAsync" FormName="RegisterForm">
            <DataAnnotationsValidator />
            
            <div class="form-group">
                <FluentTextField 
                    @bind-Value="_registerModel.FirstName"
                    Label="First Name"
                    Required="true"
                    Style="width: 100%;" />
                <ValidationMessage For="@(() => _registerModel.FirstName)" />
            </div>

            <div class="form-group">
                <FluentTextField 
                    @bind-Value="_registerModel.LastName"
                    Label="Last Name"
                    Required="true"
                    Style="width: 100%;" />
                <ValidationMessage For="@(() => _registerModel.LastName)" />
            </div>

            <div class="form-group">
                <FluentTextField 
                    @bind-Value="_registerModel.Email"
                    Label="Email Address"
                    Placeholder="your.email@example.com"
                    Required="true"
                    Style="width: 100%;" />
                <ValidationMessage For="@(() => _registerModel.Email)" />
            </div>

            <div class="form-group">
                <FluentTextField 
                    @bind-Value="_registerModel.Password"
                    Label="Password"
                    Placeholder="Minimum 6 characters"
                    TextFieldType="TextFieldType.Password"
                    Required="true"
                    Style="width: 100%;" />
                <ValidationMessage For="@(() => _registerModel.Password)" />
            </div>

            <div class="form-group">
                <FluentTextField 
                    @bind-Value="_registerModel.ConfirmPassword"
                    Label="Confirm Password"
                    TextFieldType="TextFieldType.Password"
                    Required="true"
                    Style="width: 100%;" />
                <ValidationMessage For="@(() => _registerModel.ConfirmPassword)" />
            </div>

            <div class="form-actions">
                <FluentButton 
                    Type="ButtonType.Submit"
                    Appearance="Appearance.Accent"
                    Loading="@_isLoading"
                    Disabled="@_isLoading"
                    Style="width: 100%;">
                    @(_isLoading ? "Creating Account..." : "Register")
                </FluentButton>
            </div>
        </EditForm>

        <div class="login-footer">
            <p>Already have an account? <FluentAnchor Href="/login">Login here</FluentAnchor></p>
        </div>
    </div>
</div>

@code {
    [SupplyParameterFromForm]
    private RegisterModel _registerModel { get; set; } = new();
    
    private bool _isLoading = false;
    private string? _errorMessage;
    private bool _success = false;

    private async Task HandleRegisterAsync()
    {
        _isLoading = true;
        _errorMessage = null;
        _success = false;

        try
        {
            // TODO: Implement registration with API
            await Task.Delay(1000); // Simulate API call
            
            _success = true;
            await Task.Delay(2000);
            Navigation.NavigateTo("/login");
        }
        catch (Exception ex)
        {
            _errorMessage = $"Registration failed: {ex.Message}";
        }
        finally
        {
            _isLoading = false;
        }
    }

    public class RegisterModel
    {
        [Required(ErrorMessage = "First name is required")]
        public string FirstName { get; set; } = string.Empty;

        [Required(ErrorMessage = "Last name is required")]
        public string LastName { get; set; } = string.Empty;

        [Required(ErrorMessage = "Email is required")]
        [EmailAddress(ErrorMessage = "Invalid email address")]
        public string Email { get; set; } = string.Empty;

        [Required(ErrorMessage = "Password is required")]
        [MinLength(6, ErrorMessage = "Password must be at least 6 characters")]
        public string Password { get; set; } = string.Empty;

        [Required(ErrorMessage = "Please confirm your password")]
        [Compare("Password", ErrorMessage = "Passwords do not match")]
        public string ConfirmPassword { get; set; } = string.Empty;
    }
}
