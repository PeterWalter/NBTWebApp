@using Microsoft.AspNetCore.Components.Authorization
@using NBT.WebUI.Services
@inject IAuthenticationService AuthService
@inject AuthenticationStateProvider AuthStateProvider
@implements IDisposable

<nav class="top-nav">
    <div class="nav-container">
        <FluentNavLink Href="/" Match="NavLinkMatch.All">
            Home
        </FluentNavLink>

        <FluentNavLink Href="/about">
            About
        </FluentNavLink>

        <FluentNavLink Href="/educators">
            Educators
        </FluentNavLink>

        <FluentNavLink Href="/institutions">
            Institutions
        </FluentNavLink>

        <FluentNavLink Href="/news">
            What's New
        </FluentNavLink>

        <FluentNavLink Href="/resources">
            Resources
        </FluentNavLink>

        <FluentNavLink Href="/contact">
            Contact
        </FluentNavLink>

        <div class="auth-section">
            @if (_isAuthenticated && _currentUser != null)
            {
                <span class="user-name">@_currentUser.FirstName @_currentUser.LastName</span>
                
                @if (_currentUser.Roles.Contains("Administrator") || _currentUser.Roles.Contains("Admin"))
                {
                    <FluentNavLink Href="/admin" Class="auth-link admin-link">
                        Admin
                    </FluentNavLink>
                }
                else if (_currentUser.Roles.Contains("Institution") || _currentUser.Roles.Contains("InstitutionalUser"))
                {
                    <FluentNavLink Href="/institution-dashboard" Class="auth-link">
                        Dashboard
                    </FluentNavLink>
                }
                else if (_currentUser.Roles.Contains("Student") || _currentUser.Roles.Contains("Applicant"))
                {
                    <FluentNavLink Href="/student-dashboard" Class="auth-link">
                        Dashboard
                    </FluentNavLink>
                }
                
                <FluentButton Appearance="Appearance.Outline" OnClick="HandleLogoutAsync" Class="logout-btn">
                    Logout
                </FluentButton>
            }
            else
            {
                <FluentNavLink Href="/login" Class="auth-link login-link">
                    Login
                </FluentNavLink>
            }
        </div>
    </div>
</nav>

@code {
    private bool _isAuthenticated;
    private UserInfo? _currentUser;

    protected override async Task OnInitializedAsync()
    {
        // Initialize state
        await CheckAuthenticationStatus();

        // Subscribe to authentication state changes so UI updates immediately
        AuthStateProvider.AuthenticationStateChanged += OnAuthenticationStateChanged;
    }

    // Handler must match the event delegate signature; use async void for event handler
    private async void OnAuthenticationStateChanged(Task<AuthenticationState> task)
    {
        try
        {
            var authState = await task;
            _isAuthenticated = authState.User.Identity?.IsAuthenticated ?? false;

            if (_isAuthenticated)
            {
                _currentUser = await AuthService.GetCurrentUserAsync();
            }
            else
            {
                _currentUser = null;
            }

            await InvokeAsync(StateHasChanged);
        }
        catch
        {
            // ignore
        }
    }

    private async Task CheckAuthenticationStatus()
    {
        _isAuthenticated = await AuthService.IsAuthenticatedAsync();
        if (_isAuthenticated)
        {
            _currentUser = await AuthService.GetCurrentUserAsync();
        }
        else
        {
            _currentUser = null;
        }
    }

    private async Task HandleLogoutAsync()
    {
        await AuthService.LogoutAsync();
        _isAuthenticated = false;
        _currentUser = null;
        await InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        // Unsubscribe to avoid memory leaks
        AuthStateProvider.AuthenticationStateChanged -= OnAuthenticationStateChanged;
    }
}
