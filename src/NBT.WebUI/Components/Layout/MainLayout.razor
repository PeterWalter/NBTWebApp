@inherits LayoutComponentBase

@inject NavigationManager Navigation

<FluentLayout>
    <!-- Put the top navigation inside the header so the menu appears at the top instead of a left sidebar -->
    <FluentHeader>
        <div class="header-top-wrapper">
            <LandingHeader />
            <NavMenu />
        </div>
    </FluentHeader>

    <FluentBodyContent Class="body-content">
        <div class="content">
            @Body
        </div>
    </FluentBodyContent>
</FluentLayout>

<!-- Providers -->
<FluentMenuProvider />
<FluentToastProvider />
<FluentDialogProvider />
<FluentTooltipProvider />
<FluentMessageBarProvider />
