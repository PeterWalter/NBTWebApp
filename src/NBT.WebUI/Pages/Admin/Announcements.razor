@page "/admin/announcements"
@inject NavigationManager NavigationManager

<PageTitle>Announcements - Admin</PageTitle>

<div style="padding: 24px;">
    <FluentStack Orientation="Orientation.Vertical" Style="gap: 24px;">
        <FluentStack HorizontalAlignment="HorizontalAlignment.SpaceBetween">
            <div>
                <h1>Announcements</h1>
                <p style="color: var(--neutral-foreground-hint);">Manage news and announcements</p>
            </div>
            <FluentButton Appearance="Appearance.Accent">
                + New Announcement
            </FluentButton>
        </FluentStack>

        <FluentCard>
            <FluentMessageBar Intent="MessageIntent.Info">
                <strong>Coming Soon:</strong> Announcement management features.
                <br /><br />
                <strong>Planned Features:</strong>
                <ul style="margin-top: 8px;">
                    <li>Create and edit announcements</li>
                    <li>Feature/unfeature announcements</li>
                    <li>Categorize announcements</li>
                    <li>Schedule future publications</li>
                    <li>Archive old announcements</li>
                </ul>
            </FluentMessageBar>
        </FluentCard>

        <FluentButton Appearance="Appearance.Lightweight" OnClick="@(() => NavigationManager.NavigateTo("/admin"))">
            ‚Üê Back to Dashboard
        </FluentButton>
    </FluentStack>
</div>

