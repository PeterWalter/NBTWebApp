@page "/admin/users"
@rendermode @(new Microsoft.AspNetCore.Components.Web.InteractiveServerRenderMode(prerender: false))
@inject NavigationManager NavigationManager

<PageTitle>User Management - Admin</PageTitle>

<div style="padding: 24px;">
    <FluentStack Orientation="Orientation.Vertical" Style="gap: 24px;">
        <div>
            <h1>User Management</h1>
            <p style="color: var(--neutral-foreground-hint);">Manage user accounts and permissions</p>
        </div>

        <FluentCard>
            <FluentMessageBar Intent="MessageIntent.Info">
                <strong>Coming Soon:</strong> User management features will be implemented after authentication UI integration.
                <br /><br />
                <strong>Planned Features:</strong>
                <ul style="margin-top: 8px;">
                    <li>View all registered users</li>
                    <li>Assign/remove roles (Admin, ContentEditor, Educator, Institution, User)</li>
                    <li>Enable/disable user accounts</li>
                    <li>Reset user passwords</li>
                    <li>View user activity logs</li>
                </ul>
            </FluentMessageBar>
        </FluentCard>

        <FluentButton Appearance="Appearance.Lightweight" OnClick="@(() => NavigationManager.NavigateTo("/admin"))">
            ‚Üê Back to Dashboard
        </FluentButton>
    </FluentStack>
</div>

