@page "/"
@using Microsoft.FluentUI.AspNetCore.Components

<PageTitle>National Benchmark Tests (NBT)</PageTitle>

<div class="landing-page">
    <!-- Hero Section -->
    <section class="hero-section">
        <div class="hero-content">
            <img src="/images/nbt-logo.png" alt="NBT Logo" class="hero-logo" />
            <h1>National Benchmark Tests</h1>
            <p class="hero-subtitle">Assessing academic readiness for tertiary education</p>
            <div class="hero-actions">
                <FluentButton Appearance="Appearance.Accent" 
                            IconStart="@(new Icons.Regular.Size20.PersonAdd())"
                            OnClick="@(() => Navigation.NavigateTo("/register"))">
                    Register for NBT
                </FluentButton>
                <FluentButton Appearance="Appearance.Outline"
                            IconStart="@(new Icons.Regular.Size20.SignIn())"
                            OnClick="@(() => Navigation.NavigateTo("/login"))">
                    Sign In
                </FluentButton>
            </div>
        </div>
    </section>

    <!-- Navigation Cards -->
    <section class="audience-section">
        <FluentCard class="audience-card">
            <div class="card-header">
                <FluentIcon Value="@(new Icons.Regular.Size48.Person())" Color="Color.Accent" />
                <h2>For Applicants</h2>
            </div>
            <ul class="link-list">
                <li><FluentIcon Value="@(new Icons.Regular.Size20.PersonAdd())" /><FluentAnchor Href="/register">Register for NBT</FluentAnchor></li>
                <li><FluentIcon Value="@(new Icons.Regular.Size20.SignIn())" /><FluentAnchor Href="/login">Sign In / My Account</FluentAnchor></li>
                <li><FluentIcon Value="@(new Icons.Regular.Size20.BookInformation())" /><FluentAnchor Href="/about/tests">About the Tests</FluentAnchor></li>
                <li><FluentIcon Value="@(new Icons.Regular.Size20.Calendar())" /><FluentAnchor Href="/about/test-dates">Test Dates & Venues</FluentAnchor></li>
                <li><FluentIcon Value="@(new Icons.Regular.Size20.Money())" /><FluentAnchor Href="/about/fees">Test Fees</FluentAnchor></li>
                <li><FluentIcon Value="@(new Icons.Regular.Size20.DocumentCheckmark())" /><FluentAnchor Href="/about/results">Understanding Results</FluentAnchor></li>
                <li><FluentIcon Value="@(new Icons.Regular.Size20.Accessibility())" /><FluentAnchor Href="/about/special-needs">Special Needs Accommodation</FluentAnchor></li>
                <li><FluentIcon Value="@(new Icons.Regular.Size20.QuestionCircle())" /><FluentAnchor Href="/faq">FAQs</FluentAnchor></li>
            </ul>
        </FluentCard>

        <FluentCard class="audience-card">
            <div class="card-header">
                <FluentIcon Value="@(new Icons.Regular.Size48.Building())" Color="Color.Accent" />
                <h2>For Institutions</h2>
            </div>
            <ul class="link-list">
                <li><FluentIcon Value="@(new Icons.Regular.Size20.Info())" /><FluentAnchor Href="/institutions/about">About NBT for Institutions</FluentAnchor></li>
                <li><FluentIcon Value="@(new Icons.Regular.Size20.DocumentData())" /><FluentAnchor Href="/institutions/using-results">Using NBT Results</FluentAnchor></li>
                <li><FluentIcon Value="@(new Icons.Regular.Size20.DocumentArrowDown())" /><FluentAnchor Href="/institutions/request-results">Request Results</FluentAnchor></li>
                <li><FluentIcon Value="@(new Icons.Regular.Size20.BeakerSettings())" /><FluentAnchor Href="/institutions/research">Research & Validation</FluentAnchor></li>
                <li><FluentIcon Value="@(new Icons.Regular.Size20.Handshake())" /><FluentAnchor Href="/institutions/partnership">Partnership Opportunities</FluentAnchor></li>
                <li><FluentIcon Value="@(new Icons.Regular.Size20.Mail())" /><FluentAnchor Href="/institutions/contact">Contact Us</FluentAnchor></li>
            </ul>
        </FluentCard>

        <FluentCard class="audience-card">
            <div class="card-header">
                <FluentIcon Value="@(new Icons.Regular.Size48.Hat())" Color="Color.Accent" />
                <h2>For Educators</h2>
            </div>
            <ul class="link-list">
                <li><FluentIcon Value="@(new Icons.Regular.Size20.Info())" /><FluentAnchor Href="/educators/about">About NBT for Educators</FluentAnchor></li>
                <li><FluentIcon Value="@(new Icons.Regular.Size20.BookOpen())" /><FluentAnchor Href="/educators/preparing-students">Preparing Students</FluentAnchor></li>
                <li><FluentIcon Value="@(new Icons.Regular.Size20.QuizNew())" /><FluentAnchor Href="/educators/sample-questions">Sample Questions</FluentAnchor></li>
                <li><FluentIcon Value="@(new Icons.Regular.Size20.Folder())" /><FluentAnchor Href="/educators/resources">Teaching Resources</FluentAnchor></li>
                <li><FluentIcon Value="@(new Icons.Regular.Size20.PeopleTeam())" /><FluentAnchor Href="/educators/workshops">Workshops & Training</FluentAnchor></li>
                <li><FluentIcon Value="@(new Icons.Regular.Size20.Mail())" /><FluentAnchor Href="/educators/contact">Contact Us</FluentAnchor></li>
            </ul>
        </FluentCard>
    </section>

    <!-- Quick Info Section -->
    <section class="info-section">
        <FluentCard>
            <h2>What are the NBTs?</h2>
            <p>
                The National Benchmark Tests (NBTs) are assessments for first-year applicants into higher education institutions. 
                The NBTs were designed to measure a writer's ability to transfer understanding of Academic Literacy, 
                Quantitative Literacy and Mathematics to the demands of tertiary coursework.
            </p>
            <FluentButton Appearance="Appearance.Lightweight" 
                        IconEnd="@(new Icons.Regular.Size20.ArrowRight())"
                        OnClick="@(() => Navigation.NavigateTo("/about/tests"))">
                Learn More
            </FluentButton>
        </FluentCard>

        <FluentCard>
            <h2>Why write the NBT?</h2>
            <p>
                Many universities use the NBT results alongside school results to make admission decisions. 
                The NBT helps institutions identify students' academic strengths and support needs, 
                enabling better placement and support strategies.
            </p>
            <FluentButton Appearance="Appearance.Lightweight" 
                        IconEnd="@(new Icons.Regular.Size20.ArrowRight())"
                        OnClick="@(() => Navigation.NavigateTo("/about/why-nbt"))">
                Learn More
            </FluentButton>
        </FluentCard>
    </section>

    <!-- Video Section (if available) -->
    @if (!string.IsNullOrEmpty(videoUrl))
    {
        <section class="video-section">
            <h2>Watch: How to Register for NBT</h2>
            <div class="video-container">
                <iframe src="@videoUrl" 
                        frameborder="0" 
                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                        allowfullscreen>
                </iframe>
            </div>
        </section>
    }

    <!-- Important Notices -->
    <section class="notices-section">
        <FluentMessageBar Intent="MessageIntent.Info" Style="margin-bottom: 1rem;">
            <strong>2025 Test Dates Now Available!</strong> Registration is open for the 2025 test cycle. 
            Book your test early to secure your preferred venue and date.
        </FluentMessageBar>
        
        <FluentMessageBar Intent="MessageIntent.Warning">
            <strong>Important:</strong> NBT results are valid for 3 years from the date of booking. 
            You can write a maximum of 2 tests per year.
        </FluentMessageBar>
    </section>

    <!-- Footer Info -->
    <section class="footer-info">
        <div class="footer-column">
            <h3>Contact Us</h3>
            <p><FluentIcon Value="@(new Icons.Regular.Size16.Mail())" /> info@nbt.ac.za</p>
            <p><FluentIcon Value="@(new Icons.Regular.Size16.Phone())" /> 021 650 3523</p>
        </div>
        <div class="footer-column">
            <h3>Office Hours</h3>
            <p>Monday - Friday: 8:00 AM - 4:30 PM</p>
            <p>Closed on public holidays</p>
        </div>
        <div class="footer-column">
            <h3>Quick Links</h3>
            <FluentAnchor Href="/privacy">Privacy Policy</FluentAnchor><br/>
            <FluentAnchor Href="/terms">Terms of Service</FluentAnchor><br/>
            <FluentAnchor Href="/accessibility">Accessibility</FluentAnchor>
        </div>
    </section>
</div>

@code {
    [Inject] private NavigationManager Navigation { get; set; } = default!;
    
    private string? videoUrl = null; // Set to actual video URL when available
    
    protected override void OnInitialized()
    {
        // Could load from configuration
        // videoUrl = "https://www.youtube.com/embed/YOUR_VIDEO_ID";
    }
}
