@page "/educators/contact"

<PageTitle>Contact Us - Educators</PageTitle>

<link rel="stylesheet" href="Pages/ContentPage.css" />

<div class="content-page">
    <FluentBreadcrumb>
        <FluentBreadcrumbItem Href="/">Home</FluentBreadcrumbItem>
        <FluentBreadcrumbItem Href="/educators/about">For Educators</FluentBreadcrumbItem>
        <FluentBreadcrumbItem Href="/educators/contact">Contact</FluentBreadcrumbItem>
    </FluentBreadcrumb>

    <h1>Contact Us - Educator Support</h1>

    <FluentCard class="info-card">
        <h2>We're Here to Help</h2>
        <p>
            Our educator support team is available to assist with questions about the NBTs, workshop bookings, 
            teaching resources, and student preparation strategies.
        </p>
    </FluentCard>

    <div class="contact-grid">
        <FluentCard class="contact-card">
            <FluentIcon Value="@(new Icons.Regular.Size48.Mail())" Color="Color.Accent" />
            <h3>Email</h3>
            <p><strong>General Inquiries:</strong><br/>info@nbt.ac.za</p>
            <p><strong>Workshop Bookings:</strong><br/>workshops@nbt.ac.za</p>
            <p><strong>Resources & Materials:</strong><br/>resources@nbt.ac.za</p>
        </FluentCard>

        <FluentCard class="contact-card">
            <FluentIcon Value="@(new Icons.Regular.Size48.Phone())" Color="Color.Accent" />
            <h3>Phone</h3>
            <p><strong>Main Office:</strong><br/>021 650 3523</p>
            <p><strong>Office Hours:</strong><br/>Monday - Friday<br/>8:00 AM - 4:30 PM (SAST)</p>
            <p>Closed on public holidays</p>
        </FluentCard>

        <FluentCard class="contact-card">
            <FluentIcon Value="@(new Icons.Regular.Size48.Location())" Color="Color.Accent" />
            <h3>Address</h3>
            <p>
                Centre for Educational Assessment<br/>
                University of Cape Town<br/>
                Private Bag X1<br/>
                Rondebosch 7701<br/>
                South Africa
            </p>
        </FluentCard>
    </div>

    <FluentCard class="info-card">
        <h2>Quick Links for Educators</h2>
        <div class="quick-links">
            <FluentButton Appearance="Appearance.Outline"
                        IconStart="@(new Icons.Regular.Size20.BookOpen())"
                        OnClick="@(() => Navigation.NavigateTo("/educators/preparing-students"))">
                Preparation Strategies
            </FluentButton>
            <FluentButton Appearance="Appearance.Outline"
                        IconStart="@(new Icons.Regular.Size20.QuizNew())"
                        OnClick="@(() => Navigation.NavigateTo("/educators/sample-questions"))">
                Sample Questions
            </FluentButton>
            <FluentButton Appearance="Appearance.Outline"
                        IconStart="@(new Icons.Regular.Size20.Folder())"
                        OnClick="@(() => Navigation.NavigateTo("/educators/resources"))">
                Teaching Resources
            </FluentButton>
            <FluentButton Appearance="Appearance.Outline"
                        IconStart="@(new Icons.Regular.Size20.PeopleTeam())"
                        OnClick="@(() => Navigation.NavigateTo("/educators/workshops"))">
                Workshop Information
            </FluentButton>
        </div>
    </FluentCard>

    <FluentCard class="info-card">
        <h2>Send Us a Message</h2>
        <div class="contact-form">
            <FluentTextField Label="School Name" Style="width: 100%;" />
            <FluentTextField Label="Your Name" Style="width: 100%;" />
            <FluentTextField Label="Email Address" Style="width: 100%;" />
            <FluentTextField Label="Phone Number" Style="width: 100%;" />
            <FluentSelect Label="Inquiry Type" Style="width: 100%;">
                <FluentOption Value="workshop">Workshop Booking</FluentOption>
                <FluentOption Value="resources">Teaching Resources</FluentOption>
                <FluentOption Value="preparation">Preparation Advice</FluentOption>
                <FluentOption Value="school-visit">School Visit Request</FluentOption>
                <FluentOption Value="other">Other</FluentOption>
            </FluentSelect>
            <FluentTextArea Label="Message" Rows="6" Style="width: 100%;" />
            <FluentButton Appearance="Appearance.Accent" Style="margin-top: 1rem;">
                Send Message
            </FluentButton>
        </div>
    </FluentCard>

    <FluentCard class="info-card">
        <h2>FAQ for Educators</h2>
        <p>Common questions answered:</p>
        <FluentButton Appearance="Appearance.Outline"
                    IconStart="@(new Icons.Regular.Size20.QuestionCircle())"
                    OnClick="@(() => Navigation.NavigateTo("/faq"))">
            View FAQ
        </FluentButton>
    </FluentCard>
</div>

<style>
    .contact-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
        margin: 2rem 0;
    }

    .contact-card {
        text-align: center;
        padding: 2rem;
    }

    .contact-card h3 {
        color: var(--accent-fill-rest);
        margin: 1rem 0;
    }

    .quick-links {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
        margin-top: 1rem;
    }

    .contact-form {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin-top: 1rem;
    }
</style>

@code {
    [Inject] private NavigationManager Navigation { get; set; } = default!;
}
