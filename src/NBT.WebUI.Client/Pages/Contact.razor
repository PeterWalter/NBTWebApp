@page "/contact"

<PageTitle>Contact Us</PageTitle>

<link rel="stylesheet" href="Pages/ContentPage.css" />

<div class="content-page">
    <FluentBreadcrumb>
        <FluentBreadcrumbItem Href="/">Home</FluentBreadcrumbItem>
        <FluentBreadcrumbItem Href="/contact">Contact Us</FluentBreadcrumbItem>
    </FluentBreadcrumb>

    <h1>Contact Us</h1>

    <FluentCard class="info-card">
        <h2>Get in Touch</h2>
        <p>
            We're here to help! Whether you have questions about registration, test bookings, results, or any 
            other aspect of the NBTs, our team is ready to assist you.
        </p>
    </FluentCard>

    <div class="contact-grid">
        <FluentCard class="contact-card">
            <FluentIcon Value="@(new Icons.Regular.Size48.Mail())" Color="Color.Accent" />
            <h3>Email</h3>
            <p><strong>General Inquiries:</strong><br/>info@nbt.ac.za</p>
            <p><strong>Technical Support:</strong><br/>support@nbt.ac.za</p>
            <p><strong>Results Queries:</strong><br/>results@nbt.ac.za</p>
        </FluentCard>

        <FluentCard class="contact-card">
            <FluentIcon Value="@(new Icons.Regular.Size48.Phone())" Color="Color.Accent" />
            <h3>Phone</h3>
            <p><strong>Main Office:</strong><br/>021 650 3523</p>
            <p><strong>Office Hours:</strong><br/>Monday - Friday<br/>8:00 AM - 4:30 PM (SAST)</p>
            <p>Closed on public holidays</p>
        </FluentCard>

        <FluentCard class="contact-card">
            <FluentIcon Value="@(new Icons.Regular.Size48.Location())" Color="Color.Accent" />
            <h3>Address</h3>
            <p>
                Centre for Educational Assessment<br/>
                University of Cape Town<br/>
                Private Bag X1<br/>
                Rondebosch 7701<br/>
                South Africa
            </p>
        </FluentCard>
    </div>

    <FluentCard class="info-card">
        <h2>Quick Help</h2>
        <p>Find answers quickly:</p>
        <div class="quick-help-grid">
            <div class="help-item" @onclick="@(() => Navigation.NavigateTo("/register"))">
                <FluentIcon Value="@(new Icons.Regular.Size24.PersonAdd())" Color="Color.Accent" />
                <h4>Register for NBT</h4>
                <p>Start your registration process</p>
            </div>
            <div class="help-item" @onclick="@(() => Navigation.NavigateTo("/login"))">
                <FluentIcon Value="@(new Icons.Regular.Size24.SignIn())" Color="Color.Accent" />
                <h4>Check Your Results</h4>
                <p>Log in to view your test results</p>
            </div>
            <div class="help-item" @onclick="@(() => Navigation.NavigateTo("/faq"))">
                <FluentIcon Value="@(new Icons.Regular.Size24.QuestionCircle())" Color="Color.Accent" />
                <h4>FAQ</h4>
                <p>Frequently asked questions</p>
            </div>
            <div class="help-item" @onclick="@(() => Navigation.NavigateTo("/about/test-dates"))">
                <FluentIcon Value="@(new Icons.Regular.Size24.Calendar())" Color="Color.Accent" />
                <h4>Test Dates</h4>
                <p>View available test dates</p>
            </div>
        </div>
    </FluentCard>

    <FluentCard class="info-card">
        <h2>Specialized Contact</h2>
        <div class="specialized-contacts">
            <div class="contact-type">
                <h4><FluentIcon Value="@(new Icons.Regular.Size20.Building())" /> For Institutions</h4>
                <p>Result requests and institutional partnerships</p>
                <FluentButton Appearance="Appearance.Outline"
                            OnClick="@(() => Navigation.NavigateTo("/institutions/contact"))">
                    Institution Contact
                </FluentButton>
            </div>
            <div class="contact-type">
                <h4><FluentIcon Value="@(new Icons.Regular.Size20.Hat())" /> For Educators</h4>
                <p>Workshops, resources, and teaching support</p>
                <FluentButton Appearance="Appearance.Outline"
                            OnClick="@(() => Navigation.NavigateTo("/educators/contact"))">
                    Educator Contact
                </FluentButton>
            </div>
            <div class="contact-type">
                <h4><FluentIcon Value="@(new Icons.Regular.Size20.Accessibility())" /> Special Accommodations</h4>
                <p>Accessibility and special needs support</p>
                <FluentButton Appearance="Appearance.Outline"
                            OnClick="@(() => Navigation.NavigateTo("/about/special-needs"))">
                    Learn More
                </FluentButton>
            </div>
        </div>
    </FluentCard>

    <FluentCard class="info-card">
        <h2>Send Us a Message</h2>
        <div class="contact-form">
            <FluentTextField Label="Full Name" Style="width: 100%;" Required="true" />
            <FluentTextField Label="Email Address" Style="width: 100%;" Required="true" />
            <FluentTextField Label="Phone Number" Style="width: 100%;" />
            <FluentTextField Label="NBT Number (if applicable)" Style="width: 100%;" />
            <FluentSelect Label="Subject" Style="width: 100%;" Required="true">
                <FluentOption Value="registration">Registration Question</FluentOption>
                <FluentOption Value="booking">Test Booking</FluentOption>
                <FluentOption Value="payment">Payment Issue</FluentOption>
                <FluentOption Value="results">Results Query</FluentOption>
                <FluentOption Value="technical">Technical Support</FluentOption>
                <FluentOption Value="accommodations">Special Accommodations</FluentOption>
                <FluentOption Value="other">Other</FluentOption>
            </FluentSelect>
            <FluentTextArea Label="Message" Rows="6" Style="width: 100%;" Required="true" />
            <FluentButton Appearance="Appearance.Accent" Style="margin-top: 1rem;">
                Send Message
            </FluentButton>
        </div>
        <FluentMessageBar Intent="MessageIntent.Info" Style="margin-top: 1rem;">
            We aim to respond to all inquiries within 2 business days.
        </FluentMessageBar>
    </FluentCard>

    <FluentCard class="info-card">
        <h2>Visit Us</h2>
        <p>
            Our offices are located at the Centre for Educational Assessment at the University of Cape Town, 
            Rondebosch campus. Visits are by appointment only.
        </p>
        <p><strong>To schedule a visit:</strong></p>
        <ul>
            <li>Email info@nbt.ac.za at least 5 business days in advance</li>
            <li>Provide your name, contact details, and reason for visit</li>
            <li>Bring valid identification</li>
        </ul>
    </FluentCard>

    <FluentCard class="info-card">
        <h2>Social Media</h2>
        <p>Stay connected and get updates:</p>
        <div class="social-links">
            <FluentButton Appearance="Appearance.Outline" IconStart="@(new Icons.Regular.Size20.ShareAndroid())">
                Facebook
            </FluentButton>
            <FluentButton Appearance="Appearance.Outline" IconStart="@(new Icons.Regular.Size20.ShareAndroid())">
                Twitter
            </FluentButton>
            <FluentButton Appearance="Appearance.Outline" IconStart="@(new Icons.Regular.Size20.ShareAndroid())">
                LinkedIn
            </FluentButton>
            <FluentButton Appearance="Appearance.Outline" IconStart="@(new Icons.Regular.Size20.Video())">
                YouTube
            </FluentButton>
        </div>
    </FluentCard>
</div>

<style>
    .contact-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
        margin: 2rem 0;
    }

    .contact-card {
        text-align: center;
        padding: 2rem;
    }

    .contact-card h3 {
        color: var(--accent-fill-rest);
        margin: 1rem 0;
    }

    .quick-help-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
        margin: 1.5rem 0;
    }

    .help-item {
        text-align: center;
        padding: 1.5rem;
        background: var(--neutral-layer-2);
        border-radius: 8px;
        cursor: pointer;
        transition: background 0.3s;
    }

    .help-item:hover {
        background: var(--neutral-layer-3);
    }

    .help-item h4 {
        color: var(--accent-fill-rest);
        margin: 0.5rem 0;
    }

    .specialized-contacts {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
        margin: 1.5rem 0;
    }

    .contact-type {
        padding: 1.5rem;
        background: var(--neutral-layer-2);
        border-radius: 8px;
    }

    .contact-type h4 {
        color: var(--accent-fill-rest);
        margin-top: 0;
    }

    .contact-form {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin-top: 1rem;
    }

    .social-links {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
        margin-top: 1rem;
    }
</style>

@code {
    [Inject] private NavigationManager Navigation { get; set; } = default!;
}
